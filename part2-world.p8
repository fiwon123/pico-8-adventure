pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
function _init()
 x=10
 y=10
end

function _update()
 --check player movement
 if btn(0) then x-=1 end
 if btn(1) then x+=1 end
 if btn(2) then y-=1 end
 if btn(3) then y+=1 end
end

function _draw()
 cls()
 --centre camera on player
 camera(-64+x+4,-64+y+4)
 map()
 spr(1,x,y)
 camera()
 --crosshair sprite
 --spr(16,64-4,64-4)
end


